generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  String             @id @default(cuid())
  name                String?
  email               String             @unique
  username            String?
  password            String?
  image               String?
  role                UserRole           @default(USER)
  isBanned            Boolean            @default(false)
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  emailVerified       DateTime?
  profileAvatar       Json?
  deletedAt           DateTime?
  isDeleted           Boolean            @default(false)
  scheduledDeletionAt DateTime?
  Account             Account[]
  addresses           Address[]
  agentProfile        AgentProfile?
  cart                Cart?
  agentConversations  Conversation[]     @relation("ConversationAgent")
  couponClaims        CouponClaim[]
  couponUsages        CouponUsage[]
  deliveries          Delivery[]         @relation("RiderDeliveries")
  Notification        Notification[]
  customerOrders      Order[]            @relation("CustomerOrders")
  sellerGroups        OrderSellerGroup[] @relation("SellerGroupBySeller")
  referralsReceived   Referral?          @relation("Referred")
  referralsMade       Referral[]         @relation("Referrer")
  referralCode        ReferralCode?
  referralRewards     ReferralReward[]   @relation("ReferralRewardBeneficiary")
  Review              Review[]
  riderProfile        RiderProfile?
  riderSchedules      RiderSchedule[]
  searchHistories     SearchHistory[]
  Session             Session[]
  store               Store?
  StoreFollower       StoreFollower[]
  StoreReview         StoreReview[]
  transactions        Transaction[]
  userPreference      UserPreference?
  wallet              Wallet?
  wishlist            Wishlist?
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
}

model PasswordResetAttempt {
  id        String   @id @default(cuid())
  email     String
  ip        String?
  createdAt DateTime @default(now())

  @@index([email])
  @@index([createdAt])
}

model Product {
  id               String           @id @default(cuid())
  name             String           @db.VarChar(120)
  description      String
  brand            String?
  storeId          String
  categoryId       String
  isPublished      Boolean          @default(true)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  brandId          String?
  discount         Float?
  specifications   String[]         @default([])
  technicalDetails Json             @default("[]")
  sold             Int              @default(0)
  basePriceUSD     Float
  oldPriceUSD      Float?
  averageRating    Float            @default(0)
  reviewCount      Int              @default(0)
  foodDetails      Json?
  isFoodProduct    Boolean          @default(false)
  cartItems        CartItem[]
  orderItems       OrderItem[]
  Brand            Brand?           @relation(fields: [brandId], references: [id])
  category         Category         @relation(fields: [categoryId], references: [id])
  store            Store            @relation(fields: [storeId], references: [id])
  images           ProductImage[]
  variants         ProductVariant[]
  reviews          Review[]
  wishlistItems    WishlistItem[]

  @@index([storeId])
  @@index([categoryId])
  @@index([isPublished])
  @@index([isFoodProduct])
}

model ProductVariant {
  id          String      @id @default(cuid())
  productId   String
  sku         String
  color       String?
  size        String?
  stock       Int         @default(0)
  discount    Float?
  oldPriceUSD Float?
  priceUSD    Float
  cartItems   CartItem[]
  orderItems  OrderItem[]
  product     Product     @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, sku])
  @@index([sku])
  @@index([productId])
}

model ProductImage {
  id        String  @id @default(cuid())
  imageUrl  String
  imageKey  String
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Category {
  id          String     @id @default(cuid())
  name        String     @unique
  slug        String     @unique
  parentId    String?
  iconImage   String?
  bannerImage String?
  color       String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  path        String?
  parent      Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  products    Product[]

  @@index([path])
}

model Review {
  id        String   @id @default(cuid())
  productId String
  userId    String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orderId   String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([productId, userId, orderId])
}

model SearchHistory {
  id        String   @id @default(cuid())
  query     String
  userId    String?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([query])
  @@index([userId])
}

model SearchKeyword {
  id        String   @id @default(cuid())
  keyword   String   @unique
  count     Int      @default(1)
  updatedAt DateTime @updatedAt
}

model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
}

model CartItem {
  id        String          @id @default(cuid())
  cartId    String
  productId String
  variantId String?
  quantity  Int             @default(1)
  cart      Cart            @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product   Product         @relation(fields: [productId], references: [id])
  variant   ProductVariant? @relation(fields: [variantId], references: [id])

  @@unique([cartId, productId, variantId])
  @@index([cartId])
  @@index([productId])
  @@index([variantId])
}

model Wishlist {
  id        String         @id @default(cuid())
  userId    String         @unique
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     WishlistItem[]
}

model WishlistItem {
  id         String   @id @default(cuid())
  wishlistId String
  productId  String
  product    Product  @relation(fields: [productId], references: [id])
  wishlist   Wishlist @relation(fields: [wishlistId], references: [id], onDelete: Cascade)

  @@unique([wishlistId, productId])
  @@index([wishlistId])
  @@index([productId])
}

/// *
/// * ===========================
/// * ORDERS
/// * ===========================
model Order {
  id                      String             @id @default(cuid())
  userId                  String
  status                  OrderStatus        @default(PENDING)
  deliveryType            DeliveryType       @default(HOME_DELIVERY)
  shippingFee             Float              @default(0)
  totalAmount             Float
  distanceInMiles         Float              @default(0)
  isPaid                  Boolean            @default(false)
  payoutReleased          Boolean            @default(false)
  isFoodOrder             Boolean            @default(false)
  estimatedDeliveryMin    DateTime?
  estimatedDeliveryMax    DateTime?
  createdAt               DateTime           @default(now())
  updatedAt               DateTime           @updatedAt
  paymentMethod           PaymentMethod?
  trackingNumber          String?            @unique
  couponId                String?
  discountAmount          Float?
  customerConfirmedAt     DateTime?
  deliveryPhone           String
  deliveryCity            String
  deliveryCountry         String
  deliveryFullName        String
  deliveryPostal          String
  deliveryState           String
  deliveryStreet          String
  disputeRaised           Boolean            @default(false)
  disputeRaisedAt         DateTime?
  disputeReason           String?
  postPaymentFinalized    Boolean            @default(false)
  arrivedAtHubConfirmedAt DateTime?
  arrivedAtHubConfirmedBy String?
  couponUsages            CouponUsage[]
  delivery                Delivery?          @relation("OrderDelivery")
  coupon                  Coupon?            @relation(fields: [couponId], references: [id])
  customer                User               @relation("CustomerOrders", fields: [userId], references: [id], onDelete: Cascade)
  items                   OrderItem[]
  sellerGroups            OrderSellerGroup[]
  orderTimelines          OrderTimeline[]
  referrals               Referral[]
  transactions            Transaction[]

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([couponId])
}

model OrderTimeline {
  id        String      @id @default(cuid())
  orderId   String
  status    OrderStatus
  message   String?
  createdAt DateTime    @default(now())
  order     Order       @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}

/// *
/// * GROUPS SELLER ITEMS PER ORDER
model OrderSellerGroup {
  id                     String            @id @default(cuid())
  orderId                String
  storeId                String
  sellerId               String
  subtotal               Float
  shippingFee            Float
  payoutStatus           PayoutStatus      @default(PENDING)
  status                 SellerGroupStatus @default(PENDING_PICKUP)
  expectedAtHub          DateTime?
  arrivedAtHub           DateTime?
  verified               Boolean           @default(false)
  createdAt              DateTime          @default(now())
  payoutEligibleAt       DateTime?
  payoutLocked           Boolean           @default(false)
  payoutReleasedAt       DateTime?
  hubInboundCode         String            @unique
  internalTrackingNumber String            @unique
  items                  OrderItem[]       @relation("GroupItems")
  order                  Order             @relation(fields: [orderId], references: [id])
  seller                 User              @relation("SellerGroupBySeller", fields: [sellerId], references: [id], onDelete: Cascade)
  store                  Store             @relation(fields: [storeId], references: [id])
}

model OrderItem {
  id            String            @id @default(cuid())
  orderId       String
  sellerGroupId String?
  productId     String
  variantId     String?
  quantity      Int
  price         Float
  order         Order             @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product       Product           @relation(fields: [productId], references: [id])
  sellerGroup   OrderSellerGroup? @relation("GroupItems", fields: [sellerGroupId], references: [id])
  variant       ProductVariant?   @relation(fields: [variantId], references: [id])
}

model Job {
  id         String   @id @default(cuid())
  type       String
  payload    Json
  status     String   @default("PENDING")
  createdAt  DateTime @default(now())
  attempts   Int      @default(0)
  lastError  String?
  maxRetries Int      @default(5)
  runAt      DateTime @default(now())

  @@index([status])
  @@index([type])
  @@index([runAt])
  @@index([status, type, runAt])
}

model CronLock {
  name     String   @id
  lockedAt DateTime
}

model Delivery {
  id               String         @id @default(cuid())
  orderId          String         @unique
  riderId          String?
  status           DeliveryStatus @default(PENDING)
  deliveryAddress  String?
  distance         Float?
  fee              Float
  assignedAt       DateTime?
  deliveredAt      DateTime?
  otpAttempts      Int            @default(0)
  otpExpiresAt     DateTime?
  otpHash          String?
  isLocked         Boolean        @default(false)
  lockedAt         DateTime?
  payoutEligibleAt DateTime?
  payoutLocked     Boolean        @default(false)
  payoutReleasedAt DateTime?
  order            Order          @relation("OrderDelivery", fields: [orderId], references: [id], onDelete: Cascade)
  rider            User?          @relation("RiderDeliveries", fields: [riderId], references: [id])

  @@index([orderId])
}

model RiderProfile {
  id                 String    @id @default(cuid())
  userId             String    @unique
  vehicleType        String
  plateNumber        String
  licenseNumber      String
  vehicleColor       String
  vehicleModel       String
  isVerified         Boolean   @default(false)
  verifiedAt         DateTime?
  verificationMethod String?
  isAvailable        Boolean   @default(false)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  stripeAccountId    String?   @unique
  user               User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RiderSchedule {
  id        String  @id @default(cuid())
  dayOfWeek Int
  startTime String
  endTime   String
  isActive  Boolean @default(true)
  riderId   String
  rider     User    @relation(fields: [riderId], references: [id], onDelete: Cascade)

  @@unique([riderId, dayOfWeek])
}

model Wallet {
  id            String        @id @default(cuid())
  userId        String        @unique
  balance       Float         @default(0)
  totalEarnings Float         @default(0)
  pending       Float         @default(0)
  currency      String        @default("USD")
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  transactions  Transaction[]
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  withdrawals   Withdrawal[]
}

model Withdrawal {
  id          String           @id @default(cuid())
  walletId    String
  amount      Float
  method      String?
  accountInfo String?
  status      WithdrawalStatus @default(PENDING)
  processedAt DateTime?
  createdAt   DateTime         @default(now())
  wallet      Wallet           @relation(fields: [walletId], references: [id], onDelete: Cascade)
}

model Transaction {
  id              String            @id @default(cuid())
  walletId        String?
  orderId         String?
  userId          String?
  type            TransactionType
  amount          Float
  reference       String?           @unique
  description     String?
  status          TransactionStatus @default(SUCCESS)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  referralRewards ReferralReward[]
  order           Order?            @relation(fields: [orderId], references: [id])
  user            User?             @relation(fields: [userId], references: [id], onDelete: Cascade)
  wallet          Wallet?           @relation(fields: [walletId], references: [id], onDelete: Cascade)
}

model IdempotencyKey {
  key       String   @id
  userId    String
  orderId   String?
  createdAt DateTime @default(now())

  @@index([userId])
}

model EscrowLedger {
  id              String          @id @default(uuid())
  orderId         String
  userId          String?
  role            EscrowRole
  entryType       EscrowEntryType
  amount          Float
  currency        String          @default("USD")
  status          EscrowStatus    @default(PENDING)
  reference       String?         @unique
  metadata        Json?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  withdrawnAmount Float           @default(0)

  @@index([orderId])
  @@index([userId])
  @@index([status])
}

model LedgerEntry {
  id        String          @id @default(cuid())
  orderId   String?
  userId    String?
  walletId  String?
  entryType LedgerEntryType
  direction LedgerDirection
  amount    Float
  reference String?         @unique
  createdAt DateTime        @default(now())

  @@index([orderId])
  @@index([userId])
  @@index([walletId])
}

model EscrowSnapshot {
  id        String   @id @default(cuid())
  totalHeld Float
  createdAt DateTime @default(now())
}

/// *
/// * ===========================
/// * STORE (Marketplace)
/// * ===========================
model Store {
  id                        String             @id @default(cuid())
  userId                    String             @unique
  name                      String
  slug                      String             @unique
  logo                      String?
  description               String?
  location                  String?
  address                   String?
  logoKey                   String?
  shippingRatePerMile       Float              @default(1.5)
  latitude                  Float?
  longitude                 Float?
  isActive                  Boolean            @default(false)
  isSuspended               Boolean            @default(false)
  suspensionReason          String?
  suspendedAt               DateTime?
  isVerified                Boolean            @default(false)
  verifiedAt                DateTime?
  verificationMethod        String?
  bannerImage               String?
  bannerKey                 String?
  tagline                   String?
  emailNotificationsEnabled Boolean            @default(true)
  createdAt                 DateTime           @default(now())
  updatedAt                 DateTime           @updatedAt
  type                      StoreType          @default(GENERAL)
  fulfillmentType           FulfillmentType    @default(PHYSICAL)
  deletedAt                 DateTime?
  isDeleted                 Boolean            @default(false)
  stripeAccountId           String?            @unique
  Brand                     Brand[]
  storeGroups               OrderSellerGroup[]
  products                  Product[]
  owner                     User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  StoreFollower             StoreFollower[]
  StoreReview               StoreReview[]

  @@index([userId])
  @@index([slug])
  @@index([isActive])
}

model StoreFollower {
  id        String   @id @default(cuid())
  storeId   String
  userId    String
  createdAt DateTime @default(now())
  store     Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([storeId, userId])
  @@index([storeId])
  @@index([userId])
  @@index([createdAt])
}

model StoreReview {
  id        String   @id @default(cuid())
  storeId   String
  userId    String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  store     Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([storeId, userId])
}

model Brand {
  id       String    @id @default(cuid())
  name     String    @unique
  slug     String    @unique
  storeId  String
  store    Store     @relation(fields: [storeId], references: [id])
  products Product[]
}

model ProductAnalytics {
  id        String @id @default(cuid())
  productId String @unique
  views     Int    @default(0)
  clicks    Int    @default(0)
  sales     Int    @default(0)
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

/// *
/// * ===========================
/// * MESSAGE SYSTEM
/// * ===========================
model Conversation {
  id        String               @id @default(cuid())
  userId    String
  orderId   String?
  type      ConversationType
  status    ConversationStatus   @default(OPEN)
  subject   String?
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt
  agentId   String?
  agent     User?                @relation("ConversationAgent", fields: [agentId], references: [id])
  members   ConversationMember[]
  messages  Message[]

  @@index([userId, updatedAt])
}

model AgentProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  senderId       String?
  senderType     SenderType
  content        String
  createdAt      DateTime     @default(now())
  readAt         DateTime?
  deliveredAt    DateTime?
  conversation   Conversation @relation(fields: [conversationId], references: [id])

  @@index([conversationId, createdAt])
}

model ConversationMember {
  id             String       @id @default(cuid())
  conversationId String
  userId         String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
}

/// *
/// * ===========================
/// * COUPONS & PROMOTIONS
/// * ===========================
model Coupon {
  id             String        @id @default(uuid())
  code           String        @unique
  type           CouponType
  value          Int
  minOrderAmount Int?
  maxDiscount    Int?
  usageLimit     Int?
  usedCount      Int           @default(0)
  isActive       Boolean       @default(true)
  appliesTo      CouponScope
  createdByAdmin Boolean       @default(false)
  createdAt      DateTime      @default(now())
  perUserLimit   Int?
  validFrom      DateTime?
  validTo        DateTime?
  deletedAt      DateTime?
  isDeleted      Boolean       @default(false)
  assignedUserId String?
  couponClaims   CouponClaim[]
  couponUsages   CouponUsage[]
  orders         Order[]
}

model CouponUsage {
  id       String   @id @default(uuid())
  couponId String
  userId   String
  orderId  String?
  usedAt   DateTime @default(now())
  coupon   Coupon   @relation(fields: [couponId], references: [id])
  order    Order?   @relation(fields: [orderId], references: [id])
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CouponClaim {
  id        String   @id @default(uuid())
  couponId  String
  userId    String
  claimedAt DateTime @default(now())
  coupon    Coupon   @relation(fields: [couponId], references: [id])
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([couponId, userId])
  @@index([couponId])
  @@index([userId])
  @@index([claimedAt])
}

model ReferralCode {
  id        String     @id @default(uuid())
  code      String     @unique
  userId    String     @unique
  createdAt DateTime   @default(now())
  referrals Referral[]
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Referral {
  id              String           @id @default(uuid())
  referrerId      String
  referredId      String           @unique
  referralCodeId  String
  orderId         String?
  status          ReferralStatus   @default(PENDING)
  qualifiedAt     DateTime?
  rewardedAt      DateTime?
  createdAt       DateTime         @default(now())
  order           Order?           @relation(fields: [orderId], references: [id])
  referralCode    ReferralCode     @relation(fields: [referralCodeId], references: [id])
  referred        User             @relation("Referred", fields: [referredId], references: [id], onDelete: Cascade)
  referrer        User             @relation("Referrer", fields: [referrerId], references: [id], onDelete: Cascade)
  referralRewards ReferralReward[]

  @@unique([referrerId, referredId])
  @@index([referrerId])
  @@index([referredId])
  @@index([referralCodeId])
}

model ReferralReward {
  id            String               @id @default(uuid())
  referralId    String
  beneficiaryId String
  role          ReferralRewardRole
  amount        Int
  status        ReferralRewardStatus @default(PENDING)
  issuedAt      DateTime?
  transactionId String?
  beneficiary   User                 @relation("ReferralRewardBeneficiary", fields: [beneficiaryId], references: [id], onDelete: Cascade)
  referral      Referral             @relation(fields: [referralId], references: [id])
  transaction   Transaction?         @relation(fields: [transactionId], references: [id])

  @@unique([referralId, role])
  @@index([referralId])
  @@index([beneficiaryId])
  @@index([transactionId])
}

model Address {
  id         String       @id @default(cuid())
  userId     String
  fullName   String
  phone      String
  street     String
  city       String
  state      String?
  country    String
  postalCode String?
  latitude   Float?
  longitude  Float?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  isDefault  Boolean      @default(false)
  label      AddressLabel @default(HOME)
  user       User         @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserPreference {
  id                   String   @id @default(cuid())
  userId               String   @unique
  currency             String   @default("USD")
  theme                String   @default("system")
  emailOrderUpdates    Boolean  @default(true)
  emailWalletAlerts    Boolean  @default(true)
  emailPromotions      Boolean  @default(false)
  emailRecommendations Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SiteConfiguration {
  id                String   @id @default(cuid())
  siteName          String
  siteEmail         String
  sitePhone         String?
  siteLogo          String?
